{
    "compileOnSave": true,    
    "compilerOptions": {
        "target": "es5",
        "module": "ES2015",
        "moduleResolution": "node",
        "lib": [
            "DOM",
            "es2015"
          ],
        "esModuleInterop": true,
        "sourceMap": true, 
        "rootDir": "./src",
        "outDir": "./src",
        "jsx": "react-jsx",
        "allowJs": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "experimentalDecorators": true,
        "isolatedModules": false
      },
      "include":[
        "src/**/*"
      ],
      "exclude": [
        "node_modules",
        "dist"
      ],
     
    
}